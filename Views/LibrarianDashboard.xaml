<Window x:Class="ShelfMaster.Views.LibrarianDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:ShelfMaster.Converters"
        xmlns:viewmodels="clr-namespace:ShelfMaster.ViewModels"
        mc:Ignorable="d"
        Title="Librarian Workspace"
        Height="760"
        Width="1250"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent">

    <Window.Resources>
        <converters:ViewVisibilityConverter x:Key="ViewVisibilityConverter"/>

        <LinearGradientBrush x:Key="WorkspaceBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f1f5ff" Offset="0"/>
            <GradientStop Color="#eef4ff" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="SurfaceCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="4" Color="#15000000" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="30" ShadowDepth="6" Color="#20000000" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="18,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#6c7a89"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f0f4ff"/>
                                <Setter Property="Foreground" Value="#0f4c81"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource WorkspaceBackground}" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Background="White"
                CornerRadius="30,0,0,30"
                BorderBrush="#e1e7ef"
                BorderThickness="1">
            <StackPanel Margin="18,28">
                <TextBlock Text="Navigation"
                          FontWeight="Bold"
                          Foreground="#0f4c81"
                          FontSize="16"
                          Margin="4,0,0,16"/>

                <Button Content="Overview"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Overview">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSection}" Value="Overview">
                                    <Setter Property="Background" Value="#e6efff"/>
                                    <Setter Property="Foreground" Value="#0f4c81"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Requests"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Requests"
                        Margin="0,8,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSection}" Value="Requests">
                                    <Setter Property="Background" Value="#e6efff"/>
                                    <Setter Property="Foreground" Value="#0f4c81"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Loans"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Loans"
                        Margin="0,8,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSection}" Value="Loans">
                                    <Setter Property="Background" Value="#e6efff"/>
                                    <Setter Property="Foreground" Value="#0f4c81"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Inventory"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Inventory"
                        Margin="0,8,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSection}" Value="Inventory">
                                    <Setter Property="Background" Value="#e6efff"/>
                                    <Setter Property="Foreground" Value="#0f4c81"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Settings"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Settings"
                        Margin="0,8,0,0">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSection}" Value="Settings">
                                    <Setter Property="Background" Value="#e6efff"/>
                                    <Setter Property="Foreground" Value="#0f4c81"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1"
                CornerRadius="0,30,30,0"
                Background="#f9fbff"
                Padding="30"
                MouseDown="RootBorder_MouseDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Circulation Command Center"
                                   FontSize="34"
                                   FontWeight="Bold"
                                   Foreground="#101828"/>
                        <TextBlock Text="{Binding ClerkName, StringFormat='On duty: {0}'}"
                                   Foreground="#667085"
                                   FontSize="16"/>
                        <TextBlock Text="{Binding ClerkEmail}"
                                   Foreground="#98a2b3"
                                   FontSize="13"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="Log out"
                                Click="LogoutButton_Click"
                                Height="30"
                                Padding="16,4"
                                Background="#ff5a5f"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,16,0"
                                ToolTip="Return to login"
                                FontWeight="SemiBold"/>
                        <Button Click="MinimizeButton_Click"
                                Height="30"
                                Width="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,10,0"
                                ToolTip="Minimize">
                            <Image Source="/Images/minimize.png" Stretch="Uniform"/>
                        </Button>
                        <Button Click="FullscreenButton_Click"
                                Height="30"
                                Width="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,10,0"
                                ToolTip="Toggle Fullscreen">
                            <Image Source="/Images/fullscreen.png" Stretch="Uniform"/>
                        </Button>
                        <Button Click="CloseButton_Click"
                                Height="30"
                                Width="30"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Close">
                            <Image Source="/Images/close.png" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Overview Section -->
                <Grid Grid.Row="1"
                      Margin="0,20,0,0"
                      Visibility="{Binding SelectedSection, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Overview}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.2*"/>
                        <ColumnDefinition Width="1.1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Big stats card -->
                    <Border CornerRadius="26" Padding="28">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#0f62fe" Offset="0"/>
                                <GradientStop Color="#5c8dff" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Pending approvals"
                                       Foreground="#f2f6ff"
                                       FontSize="18"/>
                            <TextBlock Grid.Row="1"
                                       Text="{Binding PendingRequests.Count}"
                                       Foreground="White"
                                       FontSize="50"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Row="2"
                                       Text="Stay ahead of requests and speed up fulfillment."
                                       Foreground="#f2f6ff"
                                       Margin="0,10,0,20"/>

                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <Border Background="#ffffff20" CornerRadius="12" Padding="12,8" Margin="0,0,12,0">
                                    <StackPanel>
                                        <TextBlock Text="Active loans" Foreground="#f2f6ff"/>
                                        <TextBlock Text="{Binding ActiveLoansCount}"
                                                   Foreground="White"
                                                   FontSize="24"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#ffffff20" CornerRadius="12" Padding="12,8">
                                    <StackPanel>
                                        <TextBlock Text="In review" Foreground="#f2f6ff"/>
                                        <TextBlock Text="{Binding PendingRequests.Count}"
                                                   Foreground="White"
                                                   FontSize="24"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Quick tips -->
                    <Border Grid.Column="1"
                            Style="{StaticResource SurfaceCard}"
                            Margin="24,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Quick tips"
                                       FontWeight="SemiBold"
                                       FontSize="18"
                                       Foreground="#101828"/>
                            <TextBlock Text="Double-click a row to inspect details."
                                       Foreground="#667085"
                                       Margin="0,12,0,0"/>
                            <TextBlock Text="Issue returns within 24h of drop-off."
                                       Foreground="#667085"/>
                            <TextBlock Text="Toggle statuses to keep inventory fresh."
                                       Foreground="#667085"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Pending queue + detail + returns -->
                <Grid Grid.Row="2"
                      Margin="0,24,0,0"
                      Visibility="{Binding SelectedSection, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Overview}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Pending queue & detail -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource SurfaceCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Pending queue"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               Foreground="#101828"/>
                                    <TextBlock Text="{Binding PendingRequests.Count, StringFormat='Tracking {0} awaiting actions'}"
                                               Foreground="#667085"
                                               FontSize="13"/>
                                </StackPanel>

                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Border Background="#eef4ff" CornerRadius="14" Padding="10,4" Margin="0,0,8,0">
                                        <TextBlock Text="Awaiting" Foreground="#1a73e8"/>
                                    </Border>
                                    <Border Background="#fff1e8" CornerRadius="14" Padding="10,4">
                                        <TextBlock Text="Overdue watch" Foreground="#ff7a00"/>
                                    </Border>
                                </StackPanel>

                                <DataGrid Grid.Row="1"
                                          Margin="0,20,0,0"
                                          ItemsSource="{Binding PendingRequests}"
                                          SelectedItem="{Binding SelectedRequest, Mode=TwoWay}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          RowHeaderWidth="0"
                                          BorderThickness="0"
                                          AlternatingRowBackground="#f4f6fb"
                                          RowHeight="60">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Student"  Binding="{Binding User.FullName}" Width="*"/>
                                        <DataGridTextColumn Header="Book"    Binding="{Binding BookCopy.Book.Title}" Width="1.5*"/>
                                        <DataGridTextColumn Header="Copy #"  Binding="{Binding BookCopy.CopyNumber}" Width="0.6*"/>
                                        <DataGridTextColumn Header="Requested" Binding="{Binding DateRequested, StringFormat='MMM dd, yyyy'}" Width="0.9*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="0.7*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1"
                                Style="{StaticResource SurfaceCard}"
                                Margin="24,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Request detail"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="#101828"/>
                                <StackPanel Margin="0,14,0,0">
                                    <TextBlock Text="Student" Foreground="#98a2b3" FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedRequest.User.FullName, TargetNullValue='—'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#101828"/>
                                </StackPanel>
                                <StackPanel Margin="0,14,0,0">
                                    <TextBlock Text="Book" Foreground="#98a2b3" FontSize="12"/>
                                    <TextBlock Text="{Binding SelectedRequest.BookCopy.Book.Title, TargetNullValue='—'}"
                                               FontSize="16"
                                               Foreground="#101828"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                                    <StackPanel Margin="0,0,20,0">
                                        <TextBlock Text="Copy #" Foreground="#98a2b3" FontSize="12"/>
                                        <TextBlock Text="{Binding SelectedRequest.BookCopy.CopyNumber, TargetNullValue='—'}" FontSize="16" Foreground="#101828"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Requested" Foreground="#98a2b3" FontSize="12"/>
                                        <TextBlock Text="{Binding SelectedRequest.DateRequested, StringFormat='{}{0:MMM dd, yyyy}', TargetNullValue='—'}" FontSize="16" Foreground="#101828"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,24,0,0">
                                    <Button Content="Approve &amp; Issue"
                                            Command="{Binding ApproveAndIssueCommand}"
                                            Style="{StaticResource mainbutton}"
                                            Width="200"
                                            Margin="0,0,12,0"/>
                                    <Button Content="Reject"
                                            Command="{Binding RejectRequestCommand}"
                                            Background="#ff5a5f"
                                            Foreground="White"
                                            Padding="12,10"
                                            BorderThickness="0"
                                            Width="140"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Book returns -->
                    <Border Grid.Row="1"
                            Style="{StaticResource SurfaceCard}"
                            Margin="0,24,0,0">
                        <StackPanel>
                            <TextBlock Text="Book returns"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#101828"/>
                            <TextBlock Text="Log returned copies and instantly free them up for the next reader."
                                       Foreground="#667085"
                                       Margin="0,4,0,20"/>

                            <TextBlock Text="No active loans to return."
                                       Foreground="#98a2b3"
                                       FontStyle="Italic"
                                       Margin="0,0,0,12"
                                       Visibility="{Binding ActiveLoans.Count, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=ZeroToCollapsed}"/>

                            <DataGrid ItemsSource="{Binding ActiveLoans}"
                                      SelectedItem="{Binding SelectedLoan, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      RowHeaderWidth="0"
                                      BorderThickness="0"
                                      AlternatingRowBackground="#f4f6fb"
                                      RowHeight="58">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Student" Binding="{Binding User.FullName}" Width="1.4*"/>
                                    <DataGridTextColumn Header="Book" Binding="{Binding BookCopy.Book.Title}" Width="2*"/>
                                    <DataGridTextColumn Header="Copy #" Binding="{Binding BookCopy.CopyNumber}" Width="0.6*"/>
                                    <DataGridTextColumn Header="Issued" Binding="{Binding DateIssued, StringFormat='{}{0:MMM dd}'}" Width="0.8*"/>
                                    <DataGridTextColumn Header="Due" Binding="{Binding DueDate, StringFormat='{}{0:MMM dd}'}" Width="0.8*"/>
                                    <DataGridTemplateColumn Header="Action" Width="0.9*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Mark returned"
                                                        Command="{Binding DataContext.ReturnLoanCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Padding="10,6"
                                                        Background="#1a73e8"
                                                        Foreground="White"
                                                        BorderThickness="0"
                                                        Cursor="Hand"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Placeholder sections (Requests, Loans, Inventory, Settings) -->
                <Border Grid.Row="1"
                        Grid.RowSpan="2"
                        Visibility="{Binding SelectedSection, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Requests}"
                        Style="{StaticResource SurfaceCard}"
                        Margin="0,20,0,0">
                    <StackPanel Margin="30">
                        <TextBlock Text="Requests" FontSize="24" FontWeight="Bold" Foreground="#101828"/>
                        <TextBlock Text="Detailed workflow filters and bulk actions are coming soon. For now, manage requests through the overview tab."
                                   Foreground="#667085"
                                   Margin="0,12,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1"
                        Grid.RowSpan="2"
                        Visibility="{Binding SelectedSection, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Loans}"
                        Style="{StaticResource SurfaceCard}"
                        Margin="0,20,0,0">
                    <StackPanel Margin="30">
                        <TextBlock Text="Loans" FontSize="24" FontWeight="Bold" Foreground="#101828"/>
                        <TextBlock Text="Loan analytics and renewal tooling will live here shortly. Continue using the overview → Book returns area for now."
                                   Foreground="#667085"
                                   Margin="0,12,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1"
                        Grid.RowSpan="2"
                        Visibility="{Binding SelectedSection, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Inventory}"
                        Style="{StaticResource SurfaceCard}"
                        Margin="0,20,0,0">
                    <StackPanel Margin="30">
                        <TextBlock Text="Inventory" FontSize="24" FontWeight="Bold" Foreground="#101828"/>
                        <TextBlock Text="Shelf tracking, batch updates, and condition reports will be available soon."
                                   Foreground="#667085"
                                   Margin="0,12,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1"
                        Grid.RowSpan="2"
                        Visibility="{Binding SelectedSection, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Settings}"
                        Style="{StaticResource SurfaceCard}"
                        Margin="0,20,0,0">
                    <StackPanel Margin="30">
                        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Foreground="#101828"/>
                        <TextBlock Text="Customize circulation rules, notification templates, and staff permissions right from this panel soon."
                                   Foreground="#667085"
                                   Margin="0,12,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
