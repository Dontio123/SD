<Window x:Class="ShelfMaster.Views.SuperAdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:ShelfMaster.Converters"
        mc:Ignorable="d"
        Title="Super Admin"
        Height="760"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <converters:ViewVisibilityConverter x:Key="ViewVisibilityConverter"/>
        
        <LinearGradientBrush x:Key="AdminShellBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f2f6ff" Offset="0"/>
            <GradientStop Color="#eef2fb" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="AdminCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Background" Value="White"/> 
            <Setter Property="Padding" Value="22"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="4" Color="#15000000" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="30" ShadowDepth="6" Color="#20000000" Opacity="0.5"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#6c7a89"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f0f4ff"/>
                                <Setter Property="Foreground" Value="#0f4c81"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
            <Setter Property="Background" Value="#e6efff"/>
            <Setter Property="Foreground" Value="#0f4c81"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource AdminShellBackground}" Margin="20">
        <Border CornerRadius="24" Background="#f7f9fb" Padding="0" MouseDown="RootBorder_MouseDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="White" CornerRadius="24,24,0,0" Padding="24,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Super Admin Console"
                               Foreground="#6c7a89"
                               FontSize="16"/>
                        <TextBlock Text="{Binding AdminName, StringFormat='Hi, {0} ðŸ‘‹'}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#0f4c81"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Log out"
                                Click="LogoutButton_Click"
                                Height="26"
                                Padding="14 2"
                                Background="#ff5a5f"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0 0 18 0"
                                ToolTip="Return to login"
                                FontWeight="SemiBold"/>
                        <Button Click="MinimizeButton_Click"
                                Height="20"
                                Width="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0 0 10 0"
                                ToolTip="Minimize">
                            <Image Source="/Images/minimize.png" Stretch="Uniform"/>
                        </Button>
                        <Button Click="FullscreenButton_Click"
                                Height="20"
                                Width="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0 0 10 0"
                                ToolTip="Toggle Fullscreen">
                            <Image Source="/Images/fullscreen.png" Stretch="Uniform"/>
                        </Button>
                        <Button Click="CloseButton_Click"
                                Height="20"
                                Width="20"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Close">
                            <Image Source="/Images/close.png" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Navigation Bar -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="0,0,0,24"
                            BorderBrush="#e1e7ef" 
                            BorderThickness="0,1,1,0">
                        <StackPanel Margin="16,20">
                            <Button Content="ðŸ“Š Dashboard" 
                                    Command="{Binding NavigateToViewCommand}" 
                                    CommandParameter="Dashboard"
                                    Style="{StaticResource NavButtonStyle}"/>
                            
                            <Button Content="ðŸ‘¤ Register Student" 
                                    Command="{Binding NavigateToViewCommand}" 
                                    CommandParameter="RegisterStudent"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="0,8,0,0"/>
                            
                            <Button Content="ðŸ‘¨â€ðŸ’¼ Register Staff" 
                                    Command="{Binding NavigateToViewCommand}" 
                                    CommandParameter="RegisterStaff"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="0,8,0,0"/>
                            
                            <Button Content="ðŸ“š Categories" 
                                    Command="{Binding NavigateToViewCommand}" 
                                    CommandParameter="Categories"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="0,8,0,0"/>
                            
                            <Button Content="ðŸ‘¥ View Students" 
                                    Command="{Binding NavigateToViewCommand}" 
                                    CommandParameter="ViewStudents"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="0,8,0,0"/>
                            
                            <Button Content="ðŸ‘¨â€ðŸ’¼ View Staff" 
                                    Command="{Binding NavigateToViewCommand}" 
                                    CommandParameter="ViewStaff"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Right Content Area -->
                    <ScrollViewer Grid.Column="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="24">
                            <!-- Dashboard View -->
                            <StackPanel Visibility="{Binding SelectedView, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Dashboard}">
                            <!-- Stats -->
                            <UniformGrid Columns="3" Margin="0,0,0,20">
                                <Border Background="{StaticResource cs_Background}" CornerRadius="18" Padding="20" Margin="0,0,15,15">
                                    <StackPanel>
                                        <TextBlock Text="Students" Foreground="#e8f4ff" FontSize="14"/>
                                        <TextBlock Text="{Binding Stats.TotalStudents, TargetNullValue=0}" Foreground="White" FontSize="34" FontWeight="Bold"/>
                                        <TextBlock Text="Registered learners" Foreground="#e8f4ff" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="White" CornerRadius="18" Padding="20" BorderBrush="#e1e7ef" BorderThickness="1" Margin="0,0,15,15">
                                    <StackPanel>
                                        <TextBlock Text="Clerks" Foreground="#6c7a89" FontSize="14"/>
                                        <TextBlock Text="{Binding Stats.TotalClerks, TargetNullValue=0}" Foreground="#0f4c81" FontSize="34" FontWeight="Bold"/>
                                        <TextBlock Text="Active staff members" Foreground="#9faec8" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="White" CornerRadius="18" Padding="20" BorderBrush="#e1e7ef" BorderThickness="1" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="Book Copies" Foreground="#6c7a89" FontSize="14"/>
                                        <TextBlock Text="{Binding Stats.TotalCopies, TargetNullValue=0}" Foreground="#0f4c81" FontSize="34" FontWeight="Bold"/>
                                        <TextBlock Text="Across all shelves" Foreground="#9faec8" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>

                            <UniformGrid Columns="3" Margin="0,0,0,20">
                                <Border Background="White" CornerRadius="18" Padding="20" BorderBrush="#ffe6c6" BorderThickness="1" Margin="0,0,15,0">
                                    <StackPanel>
                                        <TextBlock Text="Pending Requests" Foreground="#ffb347" FontSize="14"/>
                                        <TextBlock Text="{Binding Stats.PendingRequests, TargetNullValue=0}" Foreground="#ff8c42" FontSize="32" FontWeight="Bold"/>
                                        <TextBlock Text="Require review" Foreground="#ffb347" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="White" CornerRadius="18" Padding="20" BorderBrush="#c6e7ff" BorderThickness="1" Margin="0,0,15,0">
                                    <StackPanel>
                                        <TextBlock Text="Active Loans" Foreground="#0f4c81" FontSize="14"/>
                                        <TextBlock Text="{Binding Stats.ActiveLoans, TargetNullValue=0}" Foreground="#0f4c81" FontSize="32" FontWeight="Bold"/>
                                        <TextBlock Text="Currently borrowed" Foreground="#6c7a89" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="White" CornerRadius="18" Padding="20" BorderBrush="#d7e5ff" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Titles" Foreground="#6c7a89" FontSize="14"/>
                                        <TextBlock Text="{Binding Stats.TotalBooks, TargetNullValue=0}" Foreground="#0f4c81" FontSize="32" FontWeight="Bold"/>
                                        <TextBlock Text="Catalogued books" Foreground="#9faec8" FontSize="12"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                            </StackPanel>

                            <!-- Register Student View -->
                        <Border Style="{StaticResource AdminCardStyle}" 
                                Visibility="{Binding SelectedView, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=RegisterStudent}">
                            <StackPanel>
                                <TextBlock Text="Register New Student" FontSize="24" FontWeight="Bold" Foreground="#0f4c81" Margin="0,0,0,20"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                                        <TextBlock Text="First Name *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentFirstName, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,15">
                                        <TextBlock Text="Last Name *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentLastName, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Margin="0,0,0,15">
                                        <TextBlock Text="Middle Name" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentMiddleName, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,15">
                                        <TextBlock Text="Email *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentEmail, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="10,0,0,15">
                                        <TextBlock Text="Contact Number *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentContactNumber, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Margin="0,0,0,15">
                                        <TextBlock Text="Address *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentAddress, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="4" Margin="0,0,10,15">
                                        <TextBlock Text="College *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentCollege, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="4" Margin="10,0,0,15">
                                        <TextBlock Text="Department *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentDepartment, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="5" Margin="0,0,10,0">
                                        <TextBlock Text="Username *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <TextBox Text="{Binding StudentUsername, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="5" Margin="10,0,0,0">
                                        <TextBlock Text="Password *" Foreground="#6c7a89" Margin="0,0,0,4" FontSize="13"/>
                                        <PasswordBox x:Name="StudentPasswordBox" 
                                                     PasswordChanged="StudentPasswordBox_PasswordChanged"
                                                     Padding="12,10" FontSize="14" BorderBrush="#e1e7ef" BorderThickness="1"/>
                                    </StackPanel>
                                </Grid>

                                <Button Content="Create Student Account" 
                                        Command="{Binding RegisterStudentCommand}"
                                        Style="{StaticResource mainbutton}" 
                                        Margin="0,25,0,0"
                                        HorizontalAlignment="Left"
                                        Width="250"/>
                            </StackPanel>
                            </Border>

                            <!-- Register Staff View -->
                        <Border Style="{StaticResource AdminCardStyle}" 
                                Visibility="{Binding SelectedView, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=RegisterStaff}">
                            <StackPanel>
                                <TextBlock Text="Register Staff Member" FontSize="20" FontWeight="Bold" Foreground="#0f4c81" Margin="0,0,0,12"/>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="First name" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding StaffFirstName, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Last name" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding StaffLastName, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </Grid>
                                <TextBlock Text="Middle name" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding StaffMiddleName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                                <TextBlock Text="Email" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding StaffEmail, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                                <TextBlock Text="Contact number" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding StaffContactNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Username" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding StaffUsername, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Password" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                        <PasswordBox x:Name="StaffPasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="Role" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                <ComboBox ItemsSource="{Binding StaffRoles}"
                                  SelectedItem="{Binding SelectedStaffRole}"
                                  Margin="0,0,0,15"/>

                                <Button Content="Create Staff Account"
                                Command="{Binding RegisterStaffCommand}"
                                Style="{StaticResource mainbutton}"/>
                            </StackPanel>
                            </Border>

                            <!-- Categories View -->
                        <StackPanel Visibility="{Binding SelectedView, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=Categories}">
                            <Border Style="{StaticResource AdminCardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Add Category" FontSize="20" FontWeight="Bold" Foreground="#0f4c81" Margin="0,0,0,10"/>
                                    <TextBlock Text="Category name" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
                                    <TextBlock Text="Description" Foreground="#6c7a89" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding NewCategoryDescription, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,14" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>
                                    <Button Content="Add Category" Command="{Binding CreateCategoryCommand}" Style="{StaticResource mainbutton}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource AdminCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Categories" FontSize="20" FontWeight="Bold" Foreground="#0f4c81" Margin="0,0,0,10"/>
                                    <ItemsControl ItemsSource="{Binding Categories}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#f2f6fb" CornerRadius="12" Padding="12" Margin="0,0,0,10">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding CategoryName}" FontWeight="SemiBold" Foreground="#0f4c81"/>
                                                        <TextBlock Text="{Binding Description}" Foreground="#6c7a89" FontSize="12" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                            </StackPanel>

                            <!-- View Students -->
                        <Border Style="{StaticResource AdminCardStyle}" 
                                Visibility="{Binding SelectedView, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=ViewStudents}">
                            <StackPanel>
                                <TextBlock Text="Registered Students" FontSize="20" FontWeight="Bold" Foreground="#0f4c81" Margin="0,0,0,15"/>
                                <ListView ItemsSource="{Binding Students}" BorderThickness="0" MaxHeight="500">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#f2f6fb" CornerRadius="12" Padding="15" Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" Foreground="#0f4c81" FontSize="16"/>
                                                        <TextBlock Text="{Binding Email}" Foreground="#6c7a89" FontSize="13" Margin="0,4,0,0"/>
                                                        <TextBlock Foreground="#9faec8" FontSize="12" Margin="0,4,0,0">
                                                            <Run Text="{Binding College}"/><Run Text=" - "/><Run Text="{Binding Department}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding ContactNumber}" 
                                                               Foreground="#9faec8" 
                                                               FontWeight="SemiBold" 
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                            </Border>

                            <!-- View Staff -->
                        <Border Style="{StaticResource AdminCardStyle}" 
                                Visibility="{Binding SelectedView, Converter={StaticResource ViewVisibilityConverter}, ConverterParameter=ViewStaff}">
                            <StackPanel>
                                <TextBlock Text="Active Staff" FontSize="20" FontWeight="Bold" Foreground="#0f4c81" Margin="0,0,0,12"/>
                                <ListView ItemsSource="{Binding StaffMembers}" BorderThickness="0">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#f2f6fb" CornerRadius="12" Padding="12" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" Foreground="#0f4c81"/>
                                                        <TextBlock Text="{Binding Email}" Foreground="#6c7a89" FontSize="12"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" Text="{Binding Account.Role, TargetNullValue='â€”'}" Foreground="#9faec8" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
